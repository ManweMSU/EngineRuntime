    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "build builder tool",
            "type": "shell",
            "command": "\"${workspaceRoot}/Tools/tools/ertbuild\"",
            "args": [
                "\"${workspaceRoot}/Tools/ertbuild.project.ini\""
                //"-shared",
                //"-dynamiclib",
                //"-Wl,-install_name,@loader_path/../Frameworks/EngineRuntime.framework/EngineRuntime",
